pipeline {
    agent any
    
    parameters {
        string(name: 'AWS_ACCESS_KEY_ID', defaultValue: 'default_value', description: 'Description of string parameter')
        string(name: 'AWS_SECRET_ACCESS_KEY', defaultValue: '', description: 'Another string parameter')
        // Para secret parameters, utiliza la directiva credentials
        credentials(name: 'SECRET_PARAMETER', defaultValue: 'secret_id', description: 'Description of secret parameter')
    }

    environment {
        AWS_ACCESS_KEY_ID = ${params.AWS_ACCESS_KEY_ID}
        AWS_SECRET_ACCESS_KEY = ${params.AWS_SECRET_ACCESS_KEY}
        AWS_DEFAULT_REGION = "us-east-1"
    }
    
    stages {
        stage('Validar conexi√≥n AWS') {
            steps {
                script {
                    sh 'aws s3 ls'
                }
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/munozhassel/jenkins-learning.git'
            }
        }
        
        stage('Deploy Infrastructure') {
            steps {
                script {
                    dir('lab05-infraestructure') {
                        sh 'terraform init'
                        sh 'terraform plan -out=tfplan'
                        sh 'terraform apply tfplan'
                    }
                }
            }
        }
    }
}
