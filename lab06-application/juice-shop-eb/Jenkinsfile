pipeline {
    agent any

    stages {
        stage('Clonar repositorio') {
            steps {
                git 'https://github.com/munozhassel/juice-shop.git'
            }
        }
        stage('Instalar dependencias') {
            steps {
                sh 'ls -la'
                sh 'pwd'
                sh 'cd juice-shop && npm install'
            }
        }
        stage('Empaquetar aplicación') {
            steps {
                sh 'cd juice-shop && zip -r juice-shop.zip .'
            }
            post {
                always {
                    archiveArtifacts 'juice-shop/juice-shop.zip'
                }
            }
        }
    }

    post {
        always {
            script {
                echo 'La aplicación se ha empaquetado correctamente.'
            }
        }
    }
}
